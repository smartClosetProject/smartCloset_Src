<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.admin.aReview.dao.AreviewDAO">
	
		<sql id="reviewSearch">
			<if test="search == 'r_title'">
				<![CDATA[ r_title LIKE '%' || #{keyword} || '%' ]]>
			</if>
			<if test="search == 'm_id'">
				<![CDATA[ m_id LIKE '%' || #{keyword} || '%' ]]>
			</if>
			<if test="search == 'r_content'">
				<![CDATA[ r_content LIKE '%' || #{keyword} || '%' ]]>
			</if>
		</sql>
	
	<select id="reviewList" parameterType="areview" resultType="areview">
		<![CDATA[
			SELECT  r_num, r_title, r_content, to_char(r_regdate, 'YYYY-MM-DD') AS r_regdate, m_id 
			FROM
				(SELECT /*+ INDEX_DESC(review review_pk ) */
					ROWNUM as rnum ,  r_num, r_title, r_content, r_regdate, m_id 
				FROM review
				WHERE ]]>
				 <trim prefix="(" suffix=") AND " prefixOverrides="AND">
						<include refid="reviewSearch"></include>
				</trim>
		<![CDATA[ ROWNUM <= #{pageNum} * #{amount} 
			) reviewlist
			WHERE rnum > (#{pageNum} - 1) * #{amount}
		]]>		  
	</select>
	
	<!-- 전체 레코드 수 조회 -->
	<select id="reviewListCnt" parameterType="areview" resultType="int">
		SELECT count(*) FROM review
		<trim prefix=" WHERE (" suffix=")">
			<include refid="reviewSearch"></include>
		</trim>
	</select>
	
	<!-- 글 삭제 처리 -->
	<delete id="reviewDelete" parameterType="areview">
		DELETE FROM review
		WHERE r_num = #{r_num}
	</delete>

</mapper>