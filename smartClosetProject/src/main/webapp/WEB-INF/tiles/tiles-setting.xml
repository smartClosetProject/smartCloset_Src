<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  
<tiles-definitions>
	
	<definition name="content" template="/WEB-INF/views/template/admin/admin_Layout.jsp">
		<put-attribute name="title" value="나의 첫 스프링 사이트" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/template/admin/admin_footer.jsp" />
		<put-attribute name="navbar" value="/WEB-INF/views/template/admin/admin_navbar.jsp" />
	</definition>
	
	<definition name="nboard/*" extends="content"> 							<!-- 뷰단과 관련된 내용으로 name은 컨트롤러가 반환해주는 뷰정보이다. -->
		<put-attribute name="body" value="/WEB-INF/views/nboard/{1}.jsp" /> <!-- name의 board/* *에 적용되는 문구가 {1}이다.  -->
	</definition>	
	<definition name="prDetail/*" extends="content"> 							<!-- 뷰단과 관련된 내용으로 name은 컨트롤러가 반환해주는 뷰정보이다. -->
		<put-attribute name="body" value="/WEB-INF/views/prDetail/{1}.jsp" /> <!-- name의 board/* *에 적용되는 문구가 {1}이다.  -->
	</definition>													   	<!-- board/*/*라면 *에 적용되는 문구는 {2}이다. -->
	
</tiles-definitions>